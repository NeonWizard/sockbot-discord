{
  "name": "sockbot-discord",
  "version": "1.5.0-alpha.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "start": "DEVELOPMENT=true ts-node .",
    "commands:deploy": "ts-node src/deploy-commands.ts",
    "prebuild": "rm -rf dist/static",
    "build": "yarn tsc && cp -r src/static dist/static",
    "postbuild": "node -p \"'exports.VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" >> dist/version.js",
    "preversion": "yarn fmt:check && yarn lint",
    "docker:build": "docker build -t ghcr.io/neonwizard/sockbot-discord:dev .",
    "docker:push": "docker push ghcr.io/neonwizard/sockbot-discord:dev",
    "db:start": "docker compose up",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "fmt": "prettier --write '**/*.{md,css,js,ts,json}'",
    "fmt:check": "prettier --check '**/*.{md,css,js,ts,json}'",
    "typeorm": "typeorm-ts-node-commonjs",
    "migrations:generate": "yarn typeorm migration:generate -d src/database/source.ts -p ./src/database/migrations/RENAME_ME",
    "migrations:run": "yarn typeorm migration:run -d src/database/source.ts",
    "migrations:down": "yarn typeorm migration:revert -d src/database/source.ts"
  },
  "dependencies": {
    "@discordjs/rest": "^2.4.0",
    "@discordjs/voice": "^0.17.0",
    "canvas": "^3.0.0",
    "discord.js": "^14.25.1",
    "dotenv": "^16.4.7",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "openai": "^4.75.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "@types/node-cron": "^3.0.11",
    "@types/node-fetch": "2.x",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
